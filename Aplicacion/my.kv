<ThirdWindow>
    name: "inventario"
    med1: med1
    medis: medis


    GridLayout:
        cols:1
        size: root.width, root.height
        row_default_height: 10

        Label:
            size_hint_y: None
            height: 15

        GridLayout:
            cols: 4
            size_hint_y: None
            height: 100

            Label:
                size_hint_x: None
                width: 50

            Image:
                size_hint_y: None
                height: 100
                size_hint_x: None
                width: 170
                source: "Images/clinica.jpg"

            Label:
                size_hint_x: None
                width: 90

            Label:
                size_hint_x: None
                width: 500
                color: 0.04, 0.306, 0.451, 1
                font_size: 30
                text: 'Inventario de Farmacia'

        Label:
            size_hint_y: None
            height: 15

        GridLayout:
            cols: 3
            size_hint_y: None
            height: 500

            Label:
                size_hint_x: None
                width: 50

            GridLayout:
                cols: 1
                size_hint_y: None
                height: 500

                Label:
                    size_hint_y: None
                    height: 40
                    color: 0.15, 0.68, 0.93, 1
                    canvas.before:
                        Color:
                            rgba: 0.04, 0.306, 0.451, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    font_size: 25
                    text: 'Inventario'

                GridLayout:
                    cols: 4
                    size_hint_y: None
                    height: 40
                    canvas.before:
                        Color:
                            rgba: 0.04, 0.392, 0.584, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        text: 'Medicamento'
                        color: 0.15, 0.68, 0.93, 1
                        font_size: 22
                    Label:
                        text: 'Vencimiento'
                        color: 0.15, 0.68, 0.93, 1
                        font_size: 22
                    Label:
                        text: 'Unidades'
                        color: 0.15, 0.68, 0.93, 1
                        font_size: 22
                    Label:
                        text: 'Precio'
                        color: 0.15, 0.68, 0.93, 1
                        font_size: 22

                ScrollView:
                    background_color: 0.8, 0.8, 0.8, 1
                    size_hint_y: None
                    height: 350
                    bar_width: 30
                    bar_color: 5, 10, 15, .8
                    bar_inactive_color: 5, 20, 10, .5
                    scroll_type: ['bars']
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    GridLayout:
                        id: medis
                        cols: 1
                        size_hint_y: None
                        height: 300

                        GridLayout:
                            id: med1
                            cols: 4
                            size_hint_y: None
                            height: 40
                            canvas.before:
                                Color:
                                    rgba: 0.9, 0.9, 0.9, 0.8
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            
                            Label:

                                color: 0, 0, 0, 1
                                font_size: 22
                                text: 'Inventario'
                            Label:
                                color: 0, 0, 0, 1
                                font_size: 22
                                text: 'Inventario'
                            Label:
                                color: 0, 0, 0, 1
                                font_size: 22
                                text: 'Inventario'
                            Label:
                                color: 0, 0, 0, 1
                                font_size: 22
                                text: 'Inventario'
                        
                        Label:
                            size_hint_y: None
                            height: 40
                            color: 0, 0, 0, 1
                            canvas.before:
                                Color:
                                    rgba: 0.85, 0.85, 0.85, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            font_size: 25
                            text: 'Inventario'

            Label:
                size_hint_x: None
                width: 50

        GridLayout:
            cols: 6
            size_hint_y: None
            height: 50

            Label:
