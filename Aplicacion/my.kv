                    color: 0.15, 0.68, 0.93, 1
                    canvas.before:
                        Color:
                            rgba: 0.04, 0.306, 0.451, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    font_size: 25
                    text: 'Inventario'

                GridLayout:
                    cols: 5
                    size_hint_y: None
                    height: 40
                    canvas.before:
                        Color:
                            rgba: 0.04, 0.392, 0.584, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        text: 'Medicamento'
                        color: 0.15, 0.68, 0.93, 1
                        font_size: 22
                    Label:
                        text: 'ATC'
                        color: 0.15, 0.68, 0.93, 1
                        font_size: 22
                    Label:
                        text: 'Vencimiento'
                        color: 0.15, 0.68, 0.93, 1
                        font_size: 22
                    Label:
                        text: 'Unidades'
                        color: 0.15, 0.68, 0.93, 1
                        font_size: 22
                    Label:
                        text: 'Precio'
                        color: 0.15, 0.68, 0.93, 1
                        font_size: 22

                ScrollView:
                    background_color: 0.8, 0.8, 0.8, 1
                    size_hint_y: None
                    height: 300
                    bar_width: 20
                    bar_color: 5, 10, 15, .8
                    bar_inactive_color: 5, 20, 10, .5
                    scroll_type: ['bars']
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8, 0.8, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    GridLayout:
                        id: medis
                        cols: 1
                        size_hint_y: None
                        height: 1000

            Label:
                size_hint_x: None
                width: 50

